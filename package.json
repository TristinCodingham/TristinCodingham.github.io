{
  "name": "codingham-co-za",
  "version": "1.0.0",
  "description": "Frontend Web Developer Profile",
  "main": "scripts.js",
  "scripts": {
    "sass-parser": "rm styles/css/index.css && sass styles/css/index.scss styles/css/index.css",
    "autoprefixer": "postcss styles/css/index.css --use autoprefixer -d styles/css/",
    "bundle-css": "npm run sass-parser && npm run autoprefixer",
    "validate-css": "vnu.bat --css styles/css/index.css --asciiquotes",
    "validate-html": "vnu.bat index.html",
    "validate-all": "vnu.bat index.html styles/css/index.css --skip-non-html --skip-non-css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TristinCodingham/TristinCodingham.github.io.git"
  },
  "keywords": ["Web Developer", "Frontend", "UI/UX", "Profile", "HTML", "HTML5", "CSS", "CSS3", "Javascript", "ECMAScript 7"],
  "author": "Tristin Cunningham",
  "license": "All Rights Reserved",
  "bugs": {
    "url": "https://github.com/TristinCodingham/TristinCodingham.github.io/issues"
  },
  "homepage": "https://github.com/TristinCodingham/TristinCodingham.github.io/#readme",
  "devDependencies": {
    "autoprefixer": "^10.3.4",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1"
  }
}
